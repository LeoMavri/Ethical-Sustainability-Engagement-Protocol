{
  "name": "pdf-fetcher",
  "version": "1.0.0",
  "author": "Radu-Leonard Mavrodin <me@mavri.dev> (https://mavri.dev)",
  "description": "A script that fetches PDFs from Elsevier's API.",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16.9.0"
  },
  "type": "module",
  "exports": [
    "./dist/index.js"
  ],
  "scripts": {
    "lint": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --fix --cache --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "clean": "git clean -xdf --exclude=\"/config/**/*\"",
    "clean:dry": "git clean -xdf --exclude=\"/config/**/*\" --dry-run",
    "build": "tsc --project tsconfig.json",
    "start": "npm run build && node --enable-source-maps dist/index.js"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.4.5",
    "pdfreader": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
